{
  "name": "hexgate",
  "version": "0.2.4",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "description": "API wrapper for the League of Legends LCU",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b --clean && tsc -p ./tsconfig.json",
    "dev": "tsup src/index.ts --watch --onSuccess \"node dist/index.js\"",
    "test": "tsc --noEmit",
    "format": "prettier -w ./src",
    "version-package": "changeset version && pnpm format",
    "release": "pnpm test && pnpm build && changeset publish"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "hexgate",
    "league of legends",
    "league",
    "lol",
    "lcu",
    "api",
    "wrapper",
    "websocket",
    "typescript"
  ],
  "author": "Jacob Bergholtz <cuppachino.dev@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@cuppachino/type-space": "^1.14.1",
    "@types/node": "^18.15.3",
    "@types/ws": "^8.5.4",
    "prettier": "^2.8.4",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^3.3.1",
    "ws": "^8.13.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7"
  }
}
