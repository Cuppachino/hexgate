{
  "name": "hexgate",
  "version": "0.2.3",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "description": "API wrapper for the League of Legends LCU",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b --clean && tsc -p ./tsconfig.json",
    "dev": "tsup src/index.ts --watch --onSuccess \"node dist/index.js\"",
    "test": "tsc --noEmit",
    "format": "prettier -w ./src && remark . --quiet --frail --output",
    "version-package": "changeset version && pnpm format",
    "release": "pnpm test && pnpm build && changeset publish"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "hexgate",
    "league of legends",
    "league",
    "lol",
    "lcu",
    "api",
    "wrapper",
    "websocket",
    "typescript"
  ],
  "author": "Jacob Bergholtz <cuppachino.dev@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@cuppachino/type-space": "^1.14.1",
    "@types/node": "^18.15.5",
    "@types/ws": "^8.5.4",
    "prettier": "^2.8.6",
    "remark": "^14.0.2",
    "remark-cli": "^11.0.0",
    "remark-lint-emphasis-marker": "^3.1.1",
    "remark-lint-list-item-indent": "^3.1.1",
    "remark-lint-strong-marker": "^3.1.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^3.3.1",
    "ws": "^8.13.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7"
  },
  "remarkConfig": {
    "settings": {
      "emphasis": "*",
      "strong": "*"
    },
    "plugins": [
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      [
        "remark-lint-emphasis-marker",
        "*"
      ],
      [
        "remark-lint-strong-marker",
        "*"
      ]
    ]
  }
}
