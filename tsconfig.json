{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "rootDir": "src",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "schema"]
}
